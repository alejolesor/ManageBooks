@model ManageBooks.Models.Books

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> editorials = (List<SelectListItem>)ViewBag.editorials;
}

<h1>Create</h1>

<h4>Books</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateBooks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="editorials" class="control-label"></label>
                @Html.DropDownList("editorial",editorials,"Selecciona algo",new {@class="form-control"} )
                <span asp-validation-for="editorials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tittle" class="control-label"></label>
                <input asp-for="tittle" class="form-control" />
                <span asp-validation-for="tittle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="synopsis" class="control-label"></label>
                <input asp-for="synopsis" class="form-control" />
                <span asp-validation-for="synopsis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="n_pages" class="control-label"></label>
                <input asp-for="n_pages" class="form-control" />
                <span asp-validation-for="n_pages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
