@model IEnumerable<ManageBooks.Models.Books>

@{
    ViewData["Title"] = "Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Books</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Book</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.editorials)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tittle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.synopsis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.n_pages)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.isbn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.editorials)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tittle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.synopsis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.n_pages)
            </td>
            <td>
                <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.isbn" class="btn btn-warning">Editar</a>
                <a asp-controller="Books" asp-action="" asp-route-id="@item.isbn" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
